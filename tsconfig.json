{
  "compilerOptions": {
    "target": "es2018",
    "module": "esNext",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "baseUrl": ".",
    "paths": {
      "/*": [
        "*"
      ]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "node",
      "mocha",
      "types/scss.d.ts",
      "types/global.d.ts"
    ],
    "esModuleInterop": true,
    "preserveSymlinks": true
  },
  "exclude": [
    "./.meteor/**",
    "./packages/**"
  ]
}